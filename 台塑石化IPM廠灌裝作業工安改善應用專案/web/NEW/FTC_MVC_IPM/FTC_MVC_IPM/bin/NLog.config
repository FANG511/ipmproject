<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue"/>

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
  <targets>
    <target archiveEvery="Day" archiveNumbering="Rolling" concurrentWrites="true"
                  fileName="${basedir}/App_Data/logs/log.txt" keepFileOpen="false"  archiveFileName="${basedir}/App_Data/logs/log.{#}.txt"
        layout="${longdate} | [${threadid}] | ${level:uppercase=true} | ${message}" maxArchiveFiles="90" archiveAboveSize="100000000" name="file"  xsi:type="File" encoding="UTF-8"/>
    <target archiveEvery="Day" archiveNumbering="Rolling" concurrentWrites="true"
                 fileName="${basedir}/App_Data/Errorlogs/log.txt" keepFileOpen="false" archiveFileName="${basedir}/App_Data/Errorlogs/Errorlog.{#}.txt"
          layout="${longdate} | [${threadid}] | ${level:uppercase=true} | ${message}" maxArchiveFiles="90" archiveAboveSize="100000000" name="Errorfile"  xsi:type="File" encoding="UTF-8"/>
  </targets>
  <rules>
    <logger minlevel="Debug" name="*" writeTo="file"/>
    <logger minlevel="Error" name="*" writeTo="Errorfile"/>
  </rules>
</nlog>
